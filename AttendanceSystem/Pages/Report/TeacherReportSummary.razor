            <div class="input-group">
                <input type="date" class="form-control input-lg rounded" @bind="CurrDate" />
            </div>
        </div>
        <h5>Select Department: </h5>
        <div class="form-group">
            <div class="input-group">
                <select @bind="Department" class="form-control py-2">
                    @if (TeacherReportPivot == null)
                    {
                        <option>@Campus</option>

                    }
                    else
                    {
                        <option value="">-</option>
                        foreach (var ss in TeacherReportPivot)
                        {
                            <option value="@ss.Department">@ss.Department</option>
                        }
                    }

                    }
                </select>
                <buttton type="button" class="input-group-lg btn btn-primary mx-2" @onclick="SetDate">
                    <span class="oi oi-magnifying-glass mx-4"></span>
                </buttton>
            </div>
        </div>
    </div>
    <div class="col-sm"></div>
</div>
