@code {
    [Parameter]
    public string Campus { get; set; }

    public string Department { get; set; }
    public DateTime CurrDate = DateTime.Now.Date;

    List<Teacher_Attendance_Report_Pivot> TeacherReportPivot;
    List<Teacher_Attendance_Report_Pivot> TeacherReportRecord;
    List<Timetable_Links> Links;

    bool isLoading = false;
    bool spinning = false;

    public string Style = "text-align:center; font-size:12px; width:100%; height:100%;";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            isLoading = true;
            spinning = true;
            await Task.Run(() => LongOperation());
            TeacherReportPivot = await _Teach.GetSpecificDepartment(Campus);
            TeacherReportRecord = await _Teach.GetTeacherAttendanceReport(Department, Campus, CurrDate);
            Links = await _Teach.GetSpecificLink(Department, Campus);
            spinning = false;
            await Task.CompletedTask;
        }
        catch
        {
            throw;
        }

    }

    protected async Task SetDate()
    {

        isLoading = true;
        spinning = true;
        StateHasChanged();
        await Task.Run(() => LongOperation());
        TeacherReportRecord = await _Teach.GetTeacherAttendanceReport(Department, Campus, CurrDate);
        Links = await _Teach.GetSpecificLink(Department, Campus);
        spinning = false;
        await Task.CompletedTask;

    }

    protected void LongOperation()
    {
        Task.Delay(500).Wait();
        isLoading = false;
    }

    void OnSelectedRowStyling(Attendance_Report_Pivots Attendance_Report_Pivots, DataGridRowStyling styling)
    {
        styling.Background = Background.Light;

    }

    void OnRowStyling(Attendance_Report_Pivots Attendance_Report_Pivots, DataGridRowStyling styling)
    {
        styling.Style = "vertical-align: middle;";

    }
}
